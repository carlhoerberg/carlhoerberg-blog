                %li
                  %a{:type=>"application/rss+xml", :href=>"http://feeds.feedburner.com/devcarl"} 
                    %img{:src=>'/images/feed_28.png'}
                %li
                  %a{:href=>'https://github.com/carlhoerberg'}
                    %img{:src=>'/images/github_32.png'}
                %li
                  %a{:href=>'http://twitter.com/carlhoerberg'}
                    %img{:src=>'/images/twitter_32.png'}
                %li
                  %a{:href=>'http://facebook.com/carl.hoerberg'}
                    %img{:src=>'/images/facebook_32.png'}
                %li
                  %a{:href=>'http://se.linkedin.com/in/carlhoerberg'}
                    %img{:src=>'/images/linkedin_32.png'}
